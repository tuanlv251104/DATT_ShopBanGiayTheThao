@model Data.ViewModels.SignUpModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #00C9FF, #92FE9D, #FF5733, #E91E63);
        }

        .signup-container {
            width: 60%;
            max-width: 350px;
            background-color: #fff;
            padding: 20px; /* Giảm padding */
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .signup-box h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        .input-box {
            position: relative;
            margin-bottom: 20px; /* Giảm margin-bottom */
        }

            .input-box input {
                width: 100%;
                padding: 12px 0; /* Giảm padding */
                font-size: 16px;
                color: #333;
                border: none;
                border-bottom: 2px solid #333;
                outline: none;
                background: transparent;
            }

            .input-box label {
                position: absolute;
                top: 10px;
                left: 0;
                color: #666;
                pointer-events: none;
                transition: 0.5s;
            }

            .input-box input:focus ~ label,
            .input-box input:valid ~ label {
                top: -20px;
                color: #ff416c;
                font-size: 12px;
            }

        .signup-btn {
            width: 100%;
            background: linear-gradient(90deg, #ff416c, #ff4b2b);
            border: none;
            padding: 10px 0;
            border-radius: 25px;
            color: #fff;
            font-size: 18px;
            cursor: pointer;
            transition: 0.3s;
        }

            .signup-btn:hover {
                background: linear-gradient(90deg, #ff4b2b, #ff416c);
            }

        .social-signup {
            text-align: center;
            margin: 20px 0;
        }

            .social-signup p {
                color: #666;
            }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

            .social-icons a {
                text-decoration: none;
                font-size: 20px;
                color: #333;
                transition: 0.3s;
            }

                .social-icons a:hover {
                    color: #ff416c;
                }

        .login-link {
            text-align: center;
        }

            .login-link p {
                color: #666;
            }

            .login-link a {
                text-decoration: none;
                color: #ff416c;
            }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="signup-box">
            <h2>Sign Up</h2>
            <form asp-action="SignUp" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-box">
                    <input asp-for="Name" required />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Email" required />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="PhoneNumber" required />
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="BirthDay" required />
                    <label asp-for="BirthDay">Birth Day</label>
                    <span asp-validation-for="BirthDay" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Password" type="password" required />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="ConfirmPassword" type="password" required />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="signup-btn">SIGN UP</button>

                <div class="social-signup">
                    <p>Or Sign Up Using</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-google"></i></a>
                    </div>
                </div>

                <div class="login-link">
                    <p>Already have an account? <a href="/Account/Login">LOGIN</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
